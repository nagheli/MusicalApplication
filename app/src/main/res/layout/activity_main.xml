<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.ioana.musicalapplication.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/albumsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim70"
            android:layout_marginBottom="@dimen/dim25"
            android:text="@string/albums"
            android:textColor="@color/grey"
            android:textSize="@dimen/dim22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/albums"
            android:layout_width="@dimen/dim200"
            android:layout_height="@dimen/dim200"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/albumsss" />


        <TextView
            android:id="@+id/songsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim70"
            android:layout_marginBottom="@dimen/dim20"
            android:text="@string/songs"
            android:textColor="@color/grey"
            android:textSize="@dimen/dim22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/songs"
            android:layout_width="@dimen/dim200"
            android:layout_height="@dimen/dim200"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/artists" />

    </LinearLayout>
</LinearLayout>
